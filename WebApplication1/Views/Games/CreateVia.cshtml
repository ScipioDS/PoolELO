@model WebApplication1.Models.Game

@{
    ViewBag.Title = "CreateVia";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Game</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h5>Select opponent</h5>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Player2_id, new SelectList(ViewBag.Players, "Id", "Name"))
        </div>
    </div>
    @Html.HiddenFor(m => m.Player1_id)

    <div class="form-group">
        <h5>Did player win?</h5>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.DropDownListFor(model => model.Winner, new List<SelectListItem>()
                {
                new SelectListItem() { Text = "Yes", Value = "True" },
                new SelectListItem() { Text = "No", Value = "False"}},
                "Select.....", new { @id = "flag", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Winner)
            </div>
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
