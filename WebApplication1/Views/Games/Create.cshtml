@model WebApplication1.Models.Game

@{
    ViewBag.Title = "Create";
}

<h2>Create Game</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Player1_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="margin-top:10px; margin-bottom:10px">
            @Html.DropDownListFor(m => m.Player1_id, new SelectList(ViewBag.Players, "Id", "Name"), new {@class="form-control"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Player2_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="margin-top: 10px; margin-bottom: 10px">
            @Html.DropDownListFor(m => m.Player2_id, new SelectList(ViewBag.Players, "Id", "Name"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Winner, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="margin-top: 10px; margin-bottom: 10px">
            <div class="checkbox">
                @Html.DropDownListFor(model => model.Winner, new List<SelectListItem>()
                {
                new SelectListItem() { Text = "First player wins", Value = "True" },
                new SelectListItem() { Text = "Second player wins", Value = "False"}},
                "Select.....", new { @id = "flag", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Winner)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-dark text-white" style="margin-top:20px"/>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new {@class= "btn btn-dark text-white", @style="margin-top:20px" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
